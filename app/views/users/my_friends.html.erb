<h1>My Friends</h1>
<div class='search-area'>
    <h3>Search People</h3>
    <%= form_tag search_stock_path, remote:true,  method: :get  do %>
        <div class="form-group row">
            <div class='col-sm-9 no-right-padding'>
                <%= text_field_tag :user, params[:user], placeholder:'User name', autofocus:true, class:"form-control form-control-lg"%>
            </div>
            <div class='col-sm-3 no-left-padding'>
                <%= button_tag type: :submit, class:"btn btn-success" do%>
                    <%= fa_icon 'search 2x'%>
                <%end%>
            </div>
        </div>
    <%end%>
</div>
<div id="results">
</div>
<% if !@followed_friends.empty?%>
<%= render 'friends/list'%>
<% end%>